{
  "include": ["./lib/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "types": ["node", "react/experimental", "react-dom/experimental"],
    "jsx": "react-jsx",
    "strict": true,
    "rootDir": "lib",
    "noImplicitAny": false,
    "noEmitOnError": false
  }
}
